@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout.cshtml";
    var regex = "[\\w]+@[\\w]+\\.[\\w]+";
}
@model Wriststone.Models.Table.Account
    <div class="log">
        <h1>Register</h1>
        <p>Please fill in this form to edit an account.</p>
        <form method="post" action="/Profile/Edit">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="text" placeholder="Enter email" name="email" value="@Model.Email" pattern="@regex" required>
            <input type="password" placeholder="Enter password" name="password" required>
            <input type="text" placeholder="Enter fullname" name="fullname" value="@Model.Fullname">
            <input type="submit" value="Edit" />
        </form>
        <form action="/Profile/Profile">
            <input type="submit" value="Cancel" />
        </form>
    </div>

