
@{
    ViewBag.Title = "PasswordConfirmation";
    Layout = "~/Views/Layout.cshtml";
}
<div class="log">
    <h1>Sign Up</h1>
    <p>Please fill in this form to enter account.</p>
    <form method="post" action="/Profile/PasswordRecovery">
        @if (ViewData["error"] != null)
        {
            <span>@ViewData["error"]</span>
        }
        <input type="hidden" name="redirect" value="@Model" />
        <input type="text" placeholder="Enter Email" name="email" required>
        <input type="submit" value="Submit">
    </form>
</div>

